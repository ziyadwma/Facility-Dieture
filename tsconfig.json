{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "es2022"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    "src",
    "worker",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
